{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "baseUrl": ".",
    "rootDirs": ["./src/", "./test/"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
